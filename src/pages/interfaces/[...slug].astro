---
import Layout from '../../components/Layout.astro'
import { getCollection } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const interfacesCollection = await getCollection('interfaces');
  return interfacesCollection.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <div class="flex h-screen text-center" >
    <div class="m-auto">
      <div id="wrapper">
        <img src={entry.data.path}>
        <div id="descWrapper">
          <h1>{entry.data.title}</h1>
          <h2>{entry.data.tech}</h2> 
          <p>{entry.data.desc}</p>
          {entry.data.link && (
            <a href={entry.data.link} target="_blank" rel="noopener noreferrer" class="view-link">
              Ver projeto â†’
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>

  main
{
  margin-top: 0px;
}

.view-link
{
  display: inline-block;
  margin-top: 1em;
  padding: 0.5em 1em;
  background-color: rgba(255,255,255,0.1);
  color: inherit;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.view-link:hover
{
  background-color: rgba(255,255,255,0.2);
}

@media screen and (orientation: landscape) 
{

#wrapper
{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70vw;
  gap:1vw;
}

#wrapper #descWrapper
{
  padding: 1em;
  text-align: left;
  animation: fromLeft 0.75s ease 0.25s forwards;
  opacity: 0;
}

@keyframes fromLeft 
{
  0% {transform: translateX(-40em); opacity: 0;}
  100% {transform: translateX(0em); opacity: 1;}
  
}

#wrapper h1
{
  font-weight: bold;
  font-size:2.5em;
  margin-bottom: -0.2em;
  margin-left: -0.1em;
}

#descWrapper h2
{
  font-size: 1.25em;
  margin-bottom: 0.1em;
  font-style: italic;
  opacity: 0.7;
}

#descWrapper p
{
  text-align: justify;
  margin-top: 0.5em;
}


#wrapper img
{
  width:50em;
  height: auto;
  max-width: 100%;
  max-height: 50em;
  margin-bottom: 1vh;
  animation: fromLeft 0.75s ease forwards;
  opacity: 0;
  border-radius: 8px;
}

}

@media screen and (orientation: portrait)
{

  #wrapper
{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100svh;
}

#wrapper #descWrapper
{
  padding: 3em;
  text-align: left;
  animation: fromUp 0.75s ease 0.2s forwards;
  opacity: 0;
}

@keyframes fromUp
{
  0% {transform: translateY(-70em); opacity: 0;}
  100% {transform: translateY(0em); opacity: 1;}
  
}

#wrapper h1
{
  font-weight: bold;
  font-size:1.75em;
  margin-bottom: -0.2em;
  margin-left: -0.1em;
}

#descWrapper h2
{
  font-size: 1.25em;
  margin-bottom: 0.1em;
  font-style: italic;
  opacity: 0.7;
}

#descWrapper p
{
  text-align: justify;
  margin-top: 0.5em;
}


#wrapper img
{
  width:50em;
  height: auto;
  max-width: 100%;
  max-height: 50em;
  margin-bottom: -2vh;
  animation: fromUp ease 0.75s forwards;
  border-radius: 8px;
}

}

</style>
