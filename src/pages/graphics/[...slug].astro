---
import Layout from '../../components/Layout.astro'
import { getCollection } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const graphicsCollection = await getCollection('graphics');
  return graphicsCollection.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <div class="flex h-screen text-center" >
    <div class="m-auto">
      <div id="wrapper">
        <img src={entry.data.path}>
        <div id="descWrapper">
          <h1>{entry.data.title}</h1>
          <h2>{entry.data.type}</h2>
          <p>{entry.data.desc}</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>

  main
{
  margin-top: 0px;
}

@media screen and (orientation: landscape) 
{

#wrapper
{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70vw;
  gap:1vw;
  overflow: hidden;
}

#wrapper #descWrapper
{
  padding: 1em;
  text-align: left;
  animation: fromLeft 0.75s ease forwards;
  z-index: -1;
}

@keyframes fromLeft 
{
  0% {transform: translateX(-70em);}
  100% {transform: translateX(0em);}
  
}

#wrapper h1
{
  font-weight: bold;
  font-size:3em;
  margin-bottom: -0.2em;
  margin-left: -0.1em;
}

#descWrapper h2
{
  font-size: 1.25em;
  margin-bottom: 0.1em;
  font-style: italic;
}

#descWrapper p
{
  text-align: justify;
  margin-top: 0.5em;
}


img
{
  width:50em;
  height: auto;
  max-width: 100%;
  max-height: 50em;
  margin-bottom: 1vh;
}

}

@media screen and (orientation: portrait)
{

  #wrapper
{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100svh;
  overflow: hidden;
}

#wrapper #descWrapper
{
  padding: 3em;
  text-align: left;
  animation: fromUp 0.75s ease forwards;
  z-index: -1;
}

@keyframes fromUp
{
  0% {transform: translateY(-70em);}
  100% {transform: translateY(0em);}
  
}

#wrapper h1
{
  font-weight: bold;
  font-size:2em;
  margin-bottom: -0.2em;
  margin-left: -0.1em;
}

#descWrapper h2
{
  font-size: 1.25em;
  margin-bottom: 0.1em;
  font-style: italic;
}

#descWrapper p
{
  text-align: justify;
  margin-top: 0.5em;
}


img
{
  width:50em;
  height: auto;
  max-width: 100%;
  max-height: 50em;
  margin-bottom: -2vh;
}

}

</style>