---
import Layout from "../components/Layout.astro"
---

<Layout>

	<link rel="preload" as="font" type="font/ttf" href="fonts/lovan.ttf" crossorigin>

    <div class="flex h-screen text-center" id="logo">
        <div class="m-auto">
            <div id="logowrapper">
                <h1 class="select-none text-9xl opacity-0">edszon</h1>
                <p class="select-none -mt-6">&copy; 2024 Edson Cavalcanti</p>
                <p class="m-1 select-none" id="specializations">GRAPHICS • UX • UI • FRONTEND</p>
                <div id="anchorWrapper">
                    <a href="portfolios" class="mt-2 select-none">P O R T F Ó L I O S</a>
                </div>
            </div>
        </div>
    </div>

</Layout>

<style is:global>

    #logo {
        font-family: Arial, Helvetica, sans-serif;
    }

    #logo #specializations {
        letter-spacing: 3px;
        font-size: 15px;
        margin-left: 3px;
        background-color: transparent;
        transition: background-color 1.5s ease;
    }

    #logowrapper:hover #specializations {
        background-color: rgb(224, 214, 201);
    }

	.dark #logowrapper:hover #specializations {
        background-color: rgb(19, 19, 27);
    }

    #logo h1 {
        font-family: 'Lovan', sans-serif;
        font-weight: bold;
        letter-spacing: -8px;
        margin-left: -7px;
        opacity: 0;
        animation: GoUp 0.75s ease forwards;
    }

    #logo p:nth-of-type(1) {
        opacity: 0;
        animation: GoUp 0.75s ease 0.3s forwards;
    }

    #logo p:nth-of-type(2) {
        opacity: 0;
        animation: GoUp 0.75s ease 0.6s forwards;
    }

    #logo #anchorWrapper {
        overflow: hidden;
    }

    #logo #anchorWrapper a {
        display: inline-block;
        padding: 8px 10px;
        background-color: rgb(230, 219, 205);
        text-decoration: none;
        font-size: 15px;
        transition: background-color 0.5s ease;
        opacity: 0;
        animation: GoUp 1.25s ease 0.3s forwards;
    }

    #logo #anchorWrapper a:hover {
        background-color: rgb(214, 204, 190);
    }


	.dark #logo #anchorWrapper a
	{
		background-color: rgb(16, 16, 22);
	}

	.dark #logo #anchorWrapper a:hover
	{
		background-color: rgb(25, 25, 36);
	}

    @font-face {
        font-family: 'Lovan';
        src: url('/fonts/lovan.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    @keyframes GoUp {
        0% {
            opacity: 0;
            transform: translateY(150px);
            -webkit-transform: translateY(150px); /* For Safari */
        }
        100% {
            opacity: 1;
            transform: translateY(0);
            -webkit-transform: translateY(0); /* For Safari */
        }
    }

	@media screen and (orientation: portrait)
	{
		#logo h1
		{
			font-size:25vw;
		}

		#logo #specializations
		{
			font-size: 2.75vw;
			font-weight: bold;
    	}
	}

</style>
