---
import Layout from "../components/Layout.astro"
---

<Layout>

	<div class="flex h-screen text-center" id="logo">
		<div class="m-auto">
			<div id="logowrapper">
				<h1 class="select-none text-9xl opacity-0">edszon</h1>
				<p class="select-none -mt-6">&copy; 2024 Edson Cavalcanti</p>
				<p class="m-1 select-none" id="specializations">GRAPHICS • UX • UI • FRONTEND</p>
				<div id="anchorWrapper">
					<a href="portfolios" class="mt-2 select-none">P O R T F Ó L I O S</a>
				</div>
			</div>
		</div>
	</div>

</Layout>

<style>

	#logo
	{
		font-family: Arial, Helvetica, sans-serif;
	}

	#logo #specializations
	{
		letter-spacing: 3px;
		font-size: 15px;
		margin-left:3px;
		background-color: transparent;
		transition: background-color 1.5s ease;
	}

	#logowrapper:hover #specializations
	{
		background-color: rgb(224, 214, 201);
	}

	#logo h1
	{
		font-family: 'Lovan', sans-serif;
		font-weight: bold;
		letter-spacing: -8px;
		margin-left: -7px;
		animation: GoUp 0.75s ease forwards;
	}

	#logo p:nth-of-type(1)
	{
		opacity: 0;
		animation: GoUp 0.75s ease 0.3s forwards;
	}


	#logo p:nth-of-type(2)
	{
		opacity: 0;
		animation: GoUp 0.75s ease 0.6s forwards;
	}

	#logo #anchorWrapper
	{
		overflow: hidden;
	}

	#logo #anchorWrapper a
	{
		display:inline-block;
		padding:8px 10px 8px 10px;
		background-color: rgb(230, 219, 205);
		text-decoration: none !important;
		font-size: 15px;
		transition: background-color 0.5s ease;
		opacity: 0;
		animation: GoUp 1.25s 0.3s ease forwards;
	}
	
	#logo #anchorWrapper a:hover
	{
		background-color: rgb(214, 204, 190);
	}

	@font-face 
	{
		font-family: 'Lovan';
		src: url('../fonts/lovan.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@keyframes GoUp
    {
       0%{opacity: 0; transform: translateY(150px);}
       100%{opacity: 1;}
    }

</style>