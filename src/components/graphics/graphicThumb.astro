---
export interface Props
{
    path: string;
    desc: string;
    type: string;
    title: string;
}

const {path, desc, type, title} = Astro.props;
---

    <a href= "#" class="image-anchor">
        <div class = "image-box">
            <img src={path}>
            <p>{title}</p>
        </div>
    </a>

<style>

    .image-anchor
    {
        text-decoration: none;
    }

    .image-box
    {
        width:10vw;
        height: 10vw;
        background-color: transparent;
    }

    .image-box img
    {
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .image-anchor:hover .image-box img
    {
        opacity: 0.6;
    }
    
</style>